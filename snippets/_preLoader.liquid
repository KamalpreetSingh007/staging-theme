<style>
  .preLoader {
    position: fixed;
    width: 100%;
    height: 100vh;
    background: #000000b0;
    z-index: 99999;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 0px;
  }
  .preLoader > img {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    opacity: 1;
    width: 100px;
    animation: preload 2s infinite ease-in-out;
    max-width: 150px;
  }
  @keyframes preload {
    0%{
      opacity: 1;
    }
    50%{
      opacity: 0.1;
    }
    100%{
      opacity: 1;
    }
  }
</style>
<div class="preLoader">
  <img src="{{ 'whiteLogo_150.png' | asset_url }}">
</div>
<script>
  window.addEventListener('load', function() {
    $(() => {
      $( '.preLoader' ).hide();
    });
  });
</script>