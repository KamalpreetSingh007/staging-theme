  if monthIs != blank

    case monthIs

      when '01'

        echo 'January'

      when '02'

        echo 'February'

      when '03'

        echo 'March'

      when '04'

        echo 'April'

      when '05'

        echo 'May'

      when '06'

        echo 'June'

      when '07'

        echo 'July'

      when '08'

        echo 'August'

      when '09'

        echo 'September'

      when '10'

        echo 'October'

      when '11'

        echo 'November'

      when '12'

        echo 'December'

    endcase

  endif

-%}