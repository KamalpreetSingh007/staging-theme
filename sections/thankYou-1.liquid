{%-liquid

  assign ss           =   section.settings
  assign scssFile     =   'thankYou1.css' | asset_url

  echo '<link rel="stylesheet" href="' | append:  scssFile | append: '">'

  if ss.showHideSelectMenu

    echo '<div class="thankYou1">'

      echo '<div class="page-width">'

        if ss.title != blank

          echo '<div class="thankYou1__title">'

            echo ss.title | newline_to_br

          echo '</div>'

        endif

        if ss.detail != blank

          echo '<div class="thankYou1__detail">'

            echo ss.detail | newline_to_br

          echo '</div>'

        endif

        if ss.chargebeeBtn

          echo ss.chargebeeBtnContent

        else

          if ss.linkLabel != blank

            assign btnLink      =   ss.link | default: '#'

            echo '<a href="' | append: btnLink | append: '" class="thankYou1__link">'
              echo ss.linkLabel
            echo '</a>'

          endif

        endif

        if ss.bottomContent != blank

          echo '<div class="thankYou1__bottomContent">'
            echo ss.bottomContent
          echo '</div>'

        endif

      echo '</div>'

    echo '</div>'

    echo '<style>'
      echo '.thankYou1 .page-width, .thankYou1:after {'
        echo 'background-color: '| append: ss.bgColor | append: ';'
      echo '}'

      echo '.thankYou1 .page-width, .thankYou1__bottomContent, .thankYou1__bottomContent p, .thankYou1__bottomContent p a {'
        echo 'color: '| append: ss.textColor | append: ';'
      echo '}'
    echo '</style>'

  endif

-%}

{% schema %}
{
  "name"      :   "Thank you Page",
  "settings"  :   [
    {
      "type"      :   "checkbox",
      "id"        :   "showHideSelectMenu",
      "label"     :   "Show / Hide Select Menu",
      "default"   :   true
    },
    {
      "type"      :   "textarea",
      "id"        :   "title",
      "label"     :   "Title",
      "default"   :   "Thank You!"
    },
    {
      "type"      :   "textarea",
      "id"        :   "detail",
      "label"     :   "Detail",
      "default"   :   "You can manage your account, including updating any contact or billing information, by going to your profile page here."
    },
    {
      "type"      :   "text",
      "id"        :   "linkLabel",
      "label"     :   "Link Label",
      "default"   :   "Manage Your Account"
    },
    {
      "type"      :   "url",
      "id"        :   "link",
      "label"     :   "Link"
    },
    {
      "type"      :   "checkbox",
      "id"        :   "chargebeeBtn",
      "label"     :   "Is chargebee active",
      "default"   :   true
    },
    {
      "type"      :   "textarea",
      "id"        :   "chargebeeBtnContent",
      "label"     :   "Chargebee Button HTML",
      "default"   :   "<a href='javascript:void(0)' data-cb-type='checkout' data-cb-item-0='LoCA-Community-USD-Monthly' data-cb-item-0-quantity='1' class='thankYou1__link'>Subscribe</a>"
    },
    {
      "type"      :   "richtext",
      "id"        :   "bottomContent",
      "label"     :   "Content on bottom",
      "default"   :   "<p>And we can always be reached, at help@loca.art.</p>"
    },
    {
      "type"      :   "color",
      "id"        :   "bgColor",
      "label"     :   "Background Color",
      "default"   :   "#FFC3BF"
    },
    {
      "type"      :   "color",
      "id"        :   "textColor",
      "label"     :   "Text Color",
      "default"   :   "#000000"
    }
  ],
  "presets": [
    {
      "name"      :   "Thank you Page",
      "category"  :   "Thank you"
    }
  ]
}
{% endschema %}